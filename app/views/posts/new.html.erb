<%= form_for @post, url: {action: "create"}, html: {class: "new-post-form"} do |f| %>
		
			<div class="row form-row title-container col-md-7">
				<%= f.label :title, "Title" %>
				<%= f.text_field :title, placeholder: "Post Title", class: "form-control" %>
			</div>

			<div class="row form-row body-container col-md-12">
				<%= f.label :body, 'Post' %>
				<%= f.text_area :body, size:"60x12", placeholder: "Post body", class: "form-control" %>
			</div>
			
			<div class="row form-row col-md-12">
				<%= f.submit "Submit", class: "btn btn-success" %>
			</div>
	<% end %>