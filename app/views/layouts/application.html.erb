<!DOCTYPE html>
<html>
<head>
  <title>MessagingBoard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<nav class="navbar navbar-default">
	  <div class="container-fluid">
	    <ul class="nav navbar-nav">
	      <li class="nav-link active"><%= link_to "Home", root_path %></li>

	      <% if current_user %>
	      	<li class="nav-link"><%= link_to "Sign Out", destroy_user_session_path, method: :delete, id: "sign-out-link" %></li>
	      <% else %>
	      	<li class="nav-link"><%= link_to "Sign In", new_user_session_path, id: "sign-in-link"%></li>
	      	<li class="nav-link"><%= link_to "Sign Up", new_user_registration_path, id: "sign-up-link" %></li>
	      <% end %>

	    </ul>
	  </div>
	</nav>

<%= yield %>

</body>
</html>
